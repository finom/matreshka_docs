    "extract-text-webpack-plugin": "^1.0.1",
    "glob": "^7.1.1",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "http-server": "^0.9.0",
    "jsdoc": "^3.4.3",
    "json-loader": "^0.5.4",
    "marked": "^0.3.6",
    "node-sass": "^3.13.0",
    "node-sass-asset-functions": "0.0.9",
    "npm-check-updates": "^2.8.8",
